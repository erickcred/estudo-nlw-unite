{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug", //Debug,Information
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "AppLogs/log.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss.FFF} [{Level:u3}] {Message:lj} {NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "Debug"
      }
    ]
  },
  "AllowedHosts": "*"
}
